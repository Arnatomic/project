<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="infomila.info.peritapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".activities.SplashScreenActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.LoginActivity" android:screenOrientation="portrait"/>
        <activity android:name=".menus.MenuActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.CitesActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.SinistreReadOnlyActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.InformeActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.EntradaActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.ReportActivity" android:screenOrientation="portrait"/>
     </application>

</manifest>
