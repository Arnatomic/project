<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrada"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripció: "
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etDescripcio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus."
                android:scrollbars="vertical"
                android:layout_weight="1"
                />
            </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/blue" />


    </LinearLayout>


    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
    android:background="@color/blue"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="5dp">

        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/camera"
            android:onClick="onClickCamera"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Desar"
            android:layout_marginTop="10dp"
            android:onClick="onClickDesarEntrada"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancelar"
            android:onClick="onClickCancelar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


    </LinearLayout>


    <CheckBox
        android:id="@+id/chPostReparacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post-Reparació"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"/>




</LinearLayout>