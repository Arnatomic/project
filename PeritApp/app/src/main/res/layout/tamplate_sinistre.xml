<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/blue">

        <TextView
            android:id="@+id/tvDiaSetmana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Divendres"
            android:layout_gravity="center_horizontal"
            android:textSize="43dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDiaSetmana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/04/2017"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textSize="43dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvHoraSinistre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:00"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tvPoblacio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matadepera"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tvTipusSinistre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FUITA"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tvIdSinistre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="41212"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/ivEstatInforme"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:src="@drawable/ok"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>



</LinearLayout>