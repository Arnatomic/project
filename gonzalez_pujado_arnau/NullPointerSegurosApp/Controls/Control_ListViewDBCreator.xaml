<UserControl
    x:Class="NullPointerSegurosApp.Controls.Control_ListViewDBCreator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NullPointerSegurosApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <local:BackgroundStyleSelecter x:Key="rowColorStyle"/>
    </UserControl.Resources>


    <StackPanel Orientation="Vertical">
        <ListView x:Name="lvGeneric" Padding="0" ItemContainerStyleSelector="{StaticResource rowColorStyle}"  SelectionChanged="lvGeneric_SelectionChanged" DoubleTapped="lvGeneric_DoubleTapped"/>
        <Border x:Name="borderEmpty" Background="Azure" Height="200" HorizontalAlignment="Stretch" Visibility="Collapsed">
            <TextBlock Text="No Hi ha registres que mostrar" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
    </StackPanel>
</UserControl>
